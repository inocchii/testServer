class CConst {
	//---------------------------------------------
	// get 取得
	//---------------------------------------------
	function get($args) { return constant($args); }

	//---------------------------------------------
	// set 設定
	// 個別指定型：
	// 　引数１を名前、引数２を値として定数化
	// 配列指定型：
	// 　引数１で渡された名前配列を順に定数化
	// 　※値側が配列の場合は定数化しない
	//---------------------------------------------
	function set($arg1,$arg2="") {
		if ( is_array($arg1) ) {
			//-------------------------------------
			// 引数１の配列から順に定数定義
			//-------------------------------------
			foreach ($arg1 as $key => $val) {
				if ( is_array($val) ) {
					continue;
				}
				$this->_setConstant($key,$val);
			}

		} else if ( $arg1 != "" ) {
			//-------------------------------------
			// 引数１の名前と引数２の値で定数定義
			//-------------------------------------
			$this->_setConstant($arg1,$arg2);

		}
	}

	//---------------------------------------------
	// 定数化
	//---------------------------------------------
	function _setConstant($arg1,$arg2) {
		if ( !defined($arg1) ) { define($arg1,$arg2); }
	}
}
